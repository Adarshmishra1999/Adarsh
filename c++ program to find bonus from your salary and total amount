#include<iostream>
using namespace std;
int main()
{
	float salary,bonus,total;
	char gender;
	cout<<"enter your gender"<<endl;
	cin>>gender;
	cout<<"enter your salary"<<endl;
	cin>>salary;
	if(gender=='m'||gender=='M')
	{
		if(salary<10000)
		{
			bonus=salary*0.07;
			total=salary+bonus;
			cout<<"bonus="<<bonus;
			cout<<"total amount="<<total;
		}
		else
		{
			bonus=salary*0.05;
			total=salary+bonus;
			cout<<bonus;
			cout<<total;
		}
	}
	if(gender=='f'||gender=='F')
	{
		if(salary<10000)
		{
			bonus=salary*0.12;
			total=salary+bonus;
			cout<<bonus;
			cout<<total;
		}
		else
		{
			bonus=salary*0.10;
			total=salary+bonus;
			cout<<bonus;
			cout<<total;
		}
	}
	
}
